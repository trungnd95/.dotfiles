{
    "root": true, 
    "env": {
        "browser": true
    }, 
    "plugins": ["react"],
    // To use airbnb -> install eslint-config-airbnb
    // To use eslint react -> install eslint-plugin-react
    // To automatically disable all ESLint rules that conflict with prettier -> install eslint-config-prettier
    "extends": ["eslint:recommended", "airbnb", "plugin:react/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2021
    }, 
    "rules": {
        "quotes": ["error", "double"], 
        "semi": ["error", "always"], 
        "camelcase": "warn"
    }
}
